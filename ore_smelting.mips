alias OreSilo d0
alias OreFurnace1 d1
alias OreFurnace2 d2
alias OreFurnace3 d3

alias TmpFurnace

s OreSilo Open 0

main:
sleep 2
l TmpFurnace OreFurnace1 Reagents
beqz TmpFurnace opensilo
l TmpFurnace OreFurnace2 Reagents
beqz TmpFurnace opensilo
l TmpFurnace OreFurnace3 Reagents
beqz TmpFurnace opensilo

opensilo:
yield
s OreSilo Open 1
yield
s OreSilo Open 0
sleep 10
j main
