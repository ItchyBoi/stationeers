alias Sensor d0
alias Lever d1
alias Display d2

alias MaxTemp r0
alias MinTemp r1
alias TmpTemp r2

move MaxTemp 773 # = 500 C
move MinTemp 573 # = 300 C

idle:
sleep 2
l TmpTemp Sensor Temperature
bge TmpTemp MaxTemp shutdown
j idle

shutdown:
s Lever On 0
sleep 2
l TmpTemp Sensor Temperature
ble TmpTemp MinTemp idle
j shutdown